<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllProducts">

    <EditText
        android:id="@+id/id_searchProductSeeAll"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/input_search"
        android:drawableStart="@drawable/ic_search_24"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/josefinsemibold"
        android:hint="Search Product"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:textColorHint="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_categories_rv"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_searchProductSeeAll" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_rvallproducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_categories_rv" />

</androidx.constraintlayout.widget.ConstraintLayout>